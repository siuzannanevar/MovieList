<Window x:Class="MovieList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie List" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Add" Width="80" Margin="5" Click="Add_Click"/>
            <Button Content="Edit" Width="80" Margin="5" Click="Edit_Click"/>
            <Button Content="Delete" Width="80" Margin="5" Click="Delete_Click"/>

            <TextBox x:Name="SearchBox" Width="200" Margin="20,0,0,0" Text=""/>
            <Button Content="Search" Width="80" Margin="5,0,0,0" Click="SearchButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="FilmsDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserSortColumns="True" Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Director" Binding="{Binding Director}" Width="2*"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="*"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="*"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
